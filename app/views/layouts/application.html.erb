<!DOCTYPE html>
<html>
  <head>
    <title>Zago</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<%= nav_bar brand: "Zago", brand_link: root_url do %>
  <%= menu_group do %>
    <%= menu_item "Novo Produto", new_produto_path %>
    <%= menu_item "Departamentos", departamentos_path %>
  <% end %>
  <div class="form-group">
  <%= form_tag busca_produto_path, method: :get, class:"navbar-form navbar-right" do %>
      <%= text_field_tag :nome, @nome,  class:"form-control"  %>
      <%= button_to "Buscar", nil, class:"bnt bnt-default" %>
    <% end %>
  </div>
<% end %>
<div class="container">
  <body>
    <%= yield %>
  </body>
</div>
</html>
